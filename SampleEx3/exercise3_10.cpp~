//program that reads a string of characters including punctuation and writes with the punctuation removed
#include <iostream>
#include <string>

using std::cout;
using std::cin;
using std::endl;
using std::string;

int main()
{
  string str;
  cout << "enter the string to remove punctuation: " << endl;
  getline(cin, str);
  if (!str.empty())
    {
      for (auto &c : str)
	{
	if (!ispunct(c))
	  cout << c;
	}
      cout << endl;
    }
  return 0;
}
