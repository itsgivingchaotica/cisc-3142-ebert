#include <iostream>
#include <vector>
using std::cout;
using std::cin;
using std::endl;
using std::cerr;
using std::vector;

int main()
{
    vector<int> ivec;
    int i, j = 0;
    cout << "Enter the integers you wish to put into the vector: " << endl;
    
    while(cin >> i)
    {
        ivec.push_back(i);
    }
    
    if(ivec.size() > 0)
    {
      //
        if(v.size() > 1)
        {
	  //iterate until the second to last element in the vector
            while(j < ivec.size() - 1)
            {
	      //add adjacent elements
              cout << ivec[j] + ivec[j + 1] << " ";
	      //
              ++j;
            }
            cout << endl;

	    //now print sum of first and last elements, second and second to last etc
            j = 0;
	    int max = ivec.size() - 1 - j;
	    //if 10 elements, max is 10-1-0 = 9, then 10-1-1 = 8, 10-1-2 = 7
            while(j <= max)
            {
                if(j < max)
                    cout << ivec[j] + ivec[max] << " ";
                else
                    cout << ivec[j];
                ++j;
            }
            cout << endl;
        }
	//if there's only one element in the vector
        else
        {
            cout << ivec[j] << endl;
        }
    }
    else
        cerr << "Vector is empty" << endl;
    
    return 0;
}
